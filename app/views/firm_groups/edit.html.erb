<!-- Validation failure messages -->
<% if @firm_group.errors.any? %>
  <% @firm_group.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Firm Group #<%= @firm_group.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_firm_group/<%= @firm_group.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for firm_id -->
      <div class="form-group">
        <label for="firm_id" class="control-label">
          Firm
        </label>

        <input type="text" id="firm_id" name="firm_id" placeholder="Firm" class="form-control" value="<%= @firm_group.firm_id %>">
      </div>

      <!-- Label and input for ib_group_id -->
      <div class="form-group">
        <label for="ib_group_id" class="control-label">
          Ib group
        </label>

        <input type="text" id="ib_group_id" name="ib_group_id" placeholder="Ib group" class="form-control" value="<%= @firm_group.ib_group_id %>">
      </div>

      <button class="btn btn-warning">
        Update Firm Group
      </button>
      or
      <a href="/firm_groups/<%= @firm_group.id %>">Cancel</a>
    </form>
  </div>
</div>
