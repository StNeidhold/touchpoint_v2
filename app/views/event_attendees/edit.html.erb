<!-- Validation failure messages -->
<% if @event_attendee.errors.any? %>
  <% @event_attendee.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Event Attendee #<%= @event_attendee.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_event_attendee/<%= @event_attendee.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @event_attendee.user_id %>">
      </div>

      <!-- Label and input for recruiting_event_id -->
      <div class="form-group">
        <label for="recruiting_event_id" class="control-label">
          Recruiting event
        </label>

        <input type="text" id="recruiting_event_id" name="recruiting_event_id" placeholder="Recruiting event" class="form-control" value="<%= @event_attendee.recruiting_event_id %>">
      </div>

      <button class="btn btn-warning">
        Update Event Attendee
      </button>
      or
      <a href="/event_attendees/<%= @event_attendee.id %>">Cancel</a>
    </form>
  </div>
</div>
