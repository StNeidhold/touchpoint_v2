<div class="page-header">
  <h1>
    Event attendees
    <a href="/event_attendees/new" class="btn btn-lg btn-success">New Event attendee</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Recruiting event</th>
        <th>Actions</th>
      </tr>

      <% @event_attendees.each do |event_attendee| %>
      <tr>
        <td><%= event_attendee.user_id %></td>
        <td><%= event_attendee.recruiting_event_id %></td>
        <td>
          <a href="/event_attendees/<%= event_attendee.id %>" class="btn btn-primary">Show</a>
          <a href="/event_attendees/<%= event_attendee.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_event_attendee/<%= event_attendee.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
